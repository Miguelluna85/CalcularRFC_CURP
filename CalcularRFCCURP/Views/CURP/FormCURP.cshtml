                    </div>
                    <div class="col-md-7 align-content-md-center">
                        <span asp-validation-for="Paterno" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label asp-for="Materno" class="control-label"></label>
                        <input asp-for="Materno" class="form-control" />
                    </div>
                    <div class="col-md-7 align-content-md-center">
                        <span asp-validation-for="Materno" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label asp-for="fechaNacimiento" class="control-label"></label>
                        <input asp-for="fechaNacimiento" type="date" asp-format="dd/MM/yyyy" value="" class="form-control" />
                        @* @Html.TextBoxFor(m => m.fechaNacimiento, "yyyy-MM-dd", new { @type = "date" }) *@
                    </div>
                    <div class="col-md-7 align-content-md-center">
                        <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
