                        @* @Html.DropDownListFor(s=>s.SelectedSexo, Model.ListSexo, "Seleccione Sexo", new { @class = "form-select" }) *@
                        <select asp-for="SelectedSexoID" asp-items="Model.ListSexo" class="form-select">
                            <option value="0" class="fw-bold">Seleccione Sexo</option>
                        </select>
                    </div>
                    <div class="col-md-7 align-content-md-center">
                        <span asp-validation-for="SelectedSexoID" class="text-danger" ></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label class="control-label"></label>
                        <select asp-for="SelectedEstadoID" asp-items="Model.ListEstado" class="form-select">
                            <option value="0">Seleccione Estado</option>
                        </select>
                    </div>
                    <div class="col-md-7 align-content-md-center">
                        <span asp-validation-for="SelectedEstadoID" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Generar" class="btn btn-primary col-md-4" />
            </div>
        </form>
    </div>

</div>
